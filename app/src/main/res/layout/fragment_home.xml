<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">


    <dev.oneuiproject.oneui.widget.Separator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Buildinfo"/>

    <dev.oneuiproject.oneui.widget.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oui_background_color"
        android:orientation="vertical">
        <com.bohdan157.app.ui.widget.CardView
            android:id="@+id/acaaaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:TitleText="@string/branch"
            app:SummaryText="@string/Release">
        </com.bohdan157.app.ui.widget.CardView>
        <com.bohdan157.app.ui.widget.CardView
            android:id="@+id/acaaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:TitleText="@string/Uptm"
            app:SummaryText="@string/uptmkt"
            app:isDividerViewVisible="true">
        </com.bohdan157.app.ui.widget.CardView>
        <com.bohdan157.app.ui.widget.CardView
            android:id="@+id/petsss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:TitleText="@string/HNY"
            app:isDividerViewVisible="true">
        </com.bohdan157.app.ui.widget.CardView>

    </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    <dev.oneuiproject.oneui.widget.Separator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sominfo"/>

    <dev.oneuiproject.oneui.widget.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oui_background_color"
        android:orientation="vertical">

        <com.bohdan157.app.ui.widget.CardView
            android:id="@+id/acaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:IconDrawable="@drawable/bohdanold"
            app:TitleText="Bohdan157"
            app:SummaryText="App developer">
        </com.bohdan157.app.ui.widget.CardView>

    <com.bohdan157.app.ui.widget.CardView
        android:id="@+id/pets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:IconDrawable="@drawable/ic_oui_pets"
        app:TitleText="@string/mypets"
        app:SummaryText="@string/sumthc"
        app:isDividerViewVisible="true">
    </com.bohdan157.app.ui.widget.CardView>

    </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    <dev.oneuiproject.oneui.widget.RelatedCard
            android:id="@+id/relatedCardBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:title="@string/links">

        <TextView
            android:id="@+id/telegramAcc"
            style="@style/OneUI.RelativeLinkTextViewStyle"
            android:text="@string/tg" />

        <TextView
            android:id="@+id/blog"
            style="@style/OneUI.RelativeLinkTextViewStyle"
            android:text="@string/Blog" />

        <TextView
            android:id="@+id/gh"
            style="@style/OneUI.RelativeLinkTextViewStyle"
            android:text="@string/gh" />
        </dev.oneuiproject.oneui.widget.RelatedCard>



</LinearLayout>