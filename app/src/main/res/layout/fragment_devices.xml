<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.devices.DevicesFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/OneUI.TipsCardTextButtonStyle"
        android:text="@string/mdvcs"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:TitleText="@string/phone"
            app:IconDrawable="@drawable/ic_oui_device_outline"/>

        <include layout="@layout/container_info_phone"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:IconDrawable="@drawable/ic_oui_tablet_outline"
            app:TitleText="@string/Tablet"/>

        <include layout="@layout/container_info_tablet"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:IconDrawable="@drawable/ic_oui_link_to_windows"
            app:TitleText="@string/Laptop"/>

        <include layout="@layout/container_info_pc"/>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/OneUI.TipsCardTextButtonStyle"
            android:text="@string/Wearables"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:IconDrawable="@drawable/ic_oui_galaxy_watch"
            app:TitleText="@string/Watch"/>

        <include layout="@layout/container_info_watch"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:IconDrawable="@drawable/ic_oui_buds_pro_outline"
            app:TitleText="@string/Earbuds"/>

        <include layout="@layout/container_info_buds"/>

        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/OneUI.TipsCardTextButtonStyle"
            android:text="@string/Secondarydevices"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:TitleText="@string/secondphone"
            app:IconDrawable="@drawable/ic_oui_device_outline"/>

        <include layout="@layout/container_info_a30s"/>

        <com.bohdan157.app.ui.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:TitleText="@string/Thirdphone"
            app:IconDrawable="@drawable/ic_oui_device_outline"/>

        <include layout="@layout/container_info_pixel"/>


    </LinearLayout>

</LinearLayout>